{
  "manifest_version": 3,
  "name": "New Tab Blocker",
  "version": "1.0",
  "description": "Prevents target='_blank' links from opening.",
  "permissions": ["scripting", "activeTab", "storage"],
  "host_permissions": ["<all_urls>"],
  "action": {
    "default_popup": "src/popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["src/content.js"],
      "run_at": "document_start"
    }
  ]
}
